{
  "name": "grpc-vanilla",
  "version": "1.0.0",
  "description": "TypeScript gRPC service using nice-grpc",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "proto:generate": "protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./src/grpc --ts_proto_opt=outputServices=nice-grpc,outputServices=generic-definitions,useExactTypes=false --proto_path=. service.proto",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@syllabus-project/common": "^1.0.2",
    "dotenv": "^16.4.7",
    "long": "^5.2.3",
    "nice-grpc": "^2.1.0",
    "nice-grpc-common": "^2.0.2",
    "protobufjs": "^7.2.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "grpc-tools": "^1.12.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "prisma": "^6.5.0",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.156.0",
    "typescript": "^5.2.2"
  }
}
